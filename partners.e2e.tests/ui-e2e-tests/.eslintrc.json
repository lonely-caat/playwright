{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["testcafe"],
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:testcafe/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "rules": {
    "no-console": "off",
    "no-unused-expressions":"off",
    "class-methods-use-this":"off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*"]
      }
    ]
  }
}
