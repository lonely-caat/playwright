{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
  },
  "plugins": [],
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "rules": {
    "no-console": "off",
    "no-unused-expressions": "off",
    "class-methods-use-this": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/tests/*", "**/utils/*", "**/data/*"]
      }
    ]
  }
}
